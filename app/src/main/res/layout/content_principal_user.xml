<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.kevdev.searchbook.PrincipalUser"
    tools:showIn="@layout/activity_principal_user">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"                android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenido"
        android:id="@+id/textView3" />

   <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar datos"
        android:id="@+id/btn_modifData"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="center_horizontal"
        android:onClick="modifData"
        android:background="#112ff0"
        android:textColor="#ffffff" />

   <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar libro"
        android:id="@+id/btn_altaLibro"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="center_horizontal"
        android:onClick="altaLibro"
        android:background="#112ff0"
        android:textColor="#ffffff" />

   <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Eliminar perfil"
        android:id="@+id/btn_deleteProfile"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:layout_gravity="center_horizontal"
        android:onClick="eliminarPerfil"
        android:background="#112ff0"
        android:textColor="#ffffff" />

</LinearLayout>
